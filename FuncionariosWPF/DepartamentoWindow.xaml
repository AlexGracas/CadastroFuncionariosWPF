<Window x:Class="FuncionariosWPF.DepartamentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FuncionariosWPF"
        mc:Ignorable="d"
        Title="DepartamentoWindow" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Departamentos}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Id" Binding="{Binding Id}">
                </DataGridTextColumn>
                <DataGridTextColumn
                    Header="Nome do Departamento" Binding="{Binding Nome}">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
