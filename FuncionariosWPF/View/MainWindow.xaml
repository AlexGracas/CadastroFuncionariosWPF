<Window x:Class="FuncionariosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FuncionariosWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Height="20" VerticalAlignment="Top" 
              Grid.ColumnSpan="2">
            <MenuItem Header="Gerenciar">
                <MenuItem Header="Cargos"></MenuItem>
                <MenuItem Header="Departamentos"
                          x:Name="DepartamentosMenu"
                          Click="DepartamentosMenu_Click"></MenuItem>
                <MenuItem x:Name="FuncionariosMenu"
                    Header="Funcionários"
                          Click="FuncionariosMenu_Click"
                          ></MenuItem>
                <MenuItem Header="Cidades"></MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
